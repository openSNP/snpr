<h3>Write a comment on this SNP</h3>
<%= form_for(@snp_comment, html: {class: "form-horizontal", name: "new_comment" }) do |f| %>
<%= render 'shared/error_messages', target: @snp %>
<%= f.hidden_field :snp_id, value: @snp.id %>
<div class="well">
    <div class="form-group">
	<%= f.label :subject%>
	<%= f.text_field :subject %>
	<%= f.label :comment_text %>
	<%= f.text_area :comment_text, size: "20x5" %>
    </div>
	<%= f.submit "Comment", class: "btn btn-default"  %>
<% end %>
</div>
