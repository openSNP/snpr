<div class="general__container">

  <h3 class="general__title" >Listing all picture phenotypes</h3>
  <%if current_user%>
      <h4>
        <%=link_to " Add phenotype picture", {:action => "new"}, class: "btn btn-default pictures-phenotype__add-button" %>
      </h4>
  <%end%>
  <br/>
  <div class="table-responsive">
    <table class="table table-hover" id="no_snp_overview">
      <thead>
        <tr>
          <th>#</th>
          <th><%= sortable "id", "ID"%></th>
          <th><%= sortable "characteristic","Phenotype"%></th>
          <th><%= sortable "number_of_users","Number of users"%></th>
          <th><%= sortable "created_at", "Created"%>
        </tr>
      </thead>
      <% @phenotypes_paginate.each do |s| %>
      <tr>
        <td class="table-cell vertical-centered"><%= PicturePhenotype.all.sort { |a,b| a.id <=> b.id}.index(s) + 1%></td>
        <td class="table-cell vertical-centered"><%= s.id %></td>
        <td class="table-cell vertical-centered"><%= link_to(s.characteristic, s) %></td>
        <td class="table-cell vertical-centered"><%=s.number_of_users%></td>
        <td class="table-cell vertical-centered"><%=s.created_at%></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<div class="text-center">
  <%= will_paginate @phenotypes_paginate, renderer: BootstrapPagination::Rails%>
</div>
