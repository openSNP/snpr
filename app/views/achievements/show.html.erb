<div class="test-general__container container clearfix">
  <%=image_tag("achievements/#{@achievement.short_name}_80px.png", :alt => @achievement.award, class: "test-achievements__image")%>
  <h3 class="test-general__title">Achievement: <%=@achievement.award%> </h3>
  <%=((@achievement.user_achievements.length.to_f / User.all.count)*100).to_s[0,5]%> % of all users received this achievement.
  <div class="well test-achievements__table">
    <h4 class="test-achievements__table-title">Users who received this achievement</h4>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>User</th>
            <th>Number</th>
            <th>Received on</th>
          </tr>
        </thead>
        <%@achievement.user_achievements.each do |ua|%>
        <% if ua.user %>
        <tr>
          <td class="table-cell vertical-centered"><%= link_to(image_tag(ua.user.avatar.url(:thumb), class: "img-circle", width: "32px") + " #{ua.user.name}", ua.user) %></td>
          <td class="table-cell vertical-centered"><%= ua.id %></td>
          <td class="table-cell vertical-centered"><%= ua.created_at %></td>
        </tr>
        <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>
